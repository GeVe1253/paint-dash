<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>GSheetReader Example</title>
  <!-- Load GSheetReader from unpkg CDN -->
  <script src="https://unpkg.com/gsheetreader/dist/index.js"></script>
</head>
<body>
  <h1>GSheetReader Demo</h1>

  <button onclick="loadData()">Load Data</button>
  <pre id="output">Click "Load Data" to fetch from your Google Sheet.</pre>

  <script>
    function loadData() {
      document.getElementById('output').textContent = "Loading...";

      // Call GSheetReader with your sheet's ID
      GSheetReader({
        sheetId: 'YOUR_SHEET_ID',  // e.g. '1AbC123XYZ'
        sheetNumber: 1,           // Which sheet tab to read (1 = first tab)
        returnAllResults: false,  // If true, returns multiple arrays if multiple header rows found
        transform: true,          // Converts row arrays into objects keyed by header row
        onComplete: function(results) {
          // 'results' is an array of objects, one per row
          console.log('Fetched Data:', results);
          document.getElementById('output').textContent = JSON.stringify(results, null, 2);
        },
        onError: function(error) {
          console.error(error);
          document.getElementById('output').textContent = "Error: " + error.message;
        }
      });
    }
  </script>
</body>
</html>
